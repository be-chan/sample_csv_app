<h1 class="title p-2">Posts#index</h1>
<%= form_with model: @post, url: posts_create_path ,method: :post, local: true, class: "p-2" do |f| %>
  <div class="form-group">
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.date_field :contract %>
  </div>
  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>

<div>
  <%= form_with url: posts_index_path, method: :get, local: true, class: "p-2" do |f| %>
   <div class="form-group">
      <%= f.text_field :search %>
   </div>
   <div class="form-group">
      <%= f.date_field :date_search %>
   </div>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>
</div>

<div>
  <%= render 'posts/search' %>
</div>

